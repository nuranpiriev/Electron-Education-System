@model Project.DTOs.AttendanceDTOs.AttendanceUpdateDTO

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="LessonNumber" class="control-label"></label>
        <input asp-for="LessonNumber" class="form-control" />
        <span asp-validation-for="LessonNumber" class="text-danger"></span>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.Students[i].StudentId" />
                        @Model.Students[i].StudentId
                    </td>
                    <td>
                        <input asp-for="@Model.Students[i].Status" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update</button>
</form>