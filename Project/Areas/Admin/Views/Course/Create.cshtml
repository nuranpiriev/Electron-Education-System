@model CourseCreateDTO
@{
    SelectList teachers = ViewData["Teachers"] as SelectList;
}
<!-- Begin Page Content -->
<div class="row align-items-center justify-content-center col-12 p-0 m-0">
    <div class="card shadow col-lg-6 col-md-8 col-10 p-0">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Course</h6>
        </div>
        <div class="card-body">
            <form class="container" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="LessonCount"></label>
                    <textarea class="form-control" asp-for="LessonCount"></textarea>
                    <span class="text-danger" asp-validation-for="LessonCount"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Image"></label>
                    <input class="form-control" asp-for="Image" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="mb-3">
                    <select class="custom-select" asp-items="teachers" asp-for="TeacherId">
                        <option selected>Select Teacher</option>
                    </select>
                    <span class="text-danger" asp-validation-for="TeacherId"></span>
                </div>
                <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->