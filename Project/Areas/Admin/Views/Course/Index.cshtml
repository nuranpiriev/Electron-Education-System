@model IEnumerable<CourseListItemDTO>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">Courses</h6>
            <a class="btn btn-primary" style="width: 160px" asp-controller="Course" asp-action="Create">+ Add Course</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Lesson Count</th>
                            <th>Teacher Name</th>
                            <th width="300px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CourseListItemDTO item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.LessonCount</td>
                                <td>@item.TeacherName</td>
                                <td class="d-flex justify-content-around">
                                    <a class="btn btn-primary" asp-controller="Course" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <a class="btn btn-info" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->